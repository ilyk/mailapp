# Asgard Mail Environment Configuration
# Copy this file to .env and modify as needed

# Debug mode (0 or 1)
ASGARD_MAIL_DEBUG=0

# Configuration directory override
# ASGARD_MAIL_CONFIG_DIR=/custom/config/path

# Cache directory override  
# ASGARD_MAIL_CACHE_DIR=/custom/cache/path

# Log level (error, warn, info, debug, trace)
ASGARD_MAIL_LOG_LEVEL=info

# Google OAuth settings
# ASGARD_MAIL_GOOGLE_CLIENT_ID=your-client-id.googleusercontent.com
# ASGARD_MAIL_GOOGLE_CLIENT_SECRET=your-client-secret

# Database settings
ASGARD_MAIL_DB_PATH=~/.local/share/asgard-mail/asgard-mail.db

# Cache settings
ASGARD_MAIL_CACHE_SIZE_MB=500
ASGARD_MAIL_MAX_ATTACHMENT_SIZE_MB=25

# Sync settings
ASGARD_MAIL_SYNC_INTERVAL_SECONDS=300
ASGARD_MAIL_IDLE_ENABLED=1
ASGARD_MAIL_MAX_CONCURRENT_SYNCS=3

# Security settings
ASGARD_MAIL_ENCRYPT_CACHE=0
ASGARD_MAIL_BLOCK_REMOTE_IMAGES=1
ASGARD_MAIL_STRIP_TRACKING_PIXELS=1

# UI settings
ASGARD_MAIL_THEME=system
ASGARD_MAIL_SHOW_TRAY_NOTIFICATIONS=1
ASGARD_MAIL_AUTO_MARK_READ_SECONDS=3

# Development settings
ASGARD_MAIL_DEMO_MODE=0
ASGARD_MAIL_MOCK_SERVERS=0
